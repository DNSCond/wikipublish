{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "wikipublish",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "game": {
        "entry": "game.html"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create Post",
        "description": "Create a wikiedit post",
        "forUserType": "moderator",
        "location": "subreddit",
        "endpoint": "/internal/menu/create-post"
      }
    ]
  },
  "triggers": {},
  "dev": {
    "subreddit": "wikipublish_dev"
  }
}